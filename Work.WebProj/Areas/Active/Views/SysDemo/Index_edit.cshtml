
@{
    @* Layout = "~/Views/Shared/Manage/RLayout.cshtml"; *@
    @* 暫用 *@
    Layout = "~/Views/Shared/SysLayoutDemo.cshtml";
    ViewBag.BodyClass = "Order";
    ViewBag.IsFirstPage = false;
    ViewBag.Crumb = "首頁輪播圖維護";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><i class="fa-caret-right"></i> 網站資料管理</li>
        <li><i class="fa-angle-right"></i> @ViewBag.Crumb</li>
    </ul>
}

<h3 class="h3">@ViewBag.Crumb<small class="sub"><i class="fa-angle-double-right"></i> 編輯</small></h3>

<form action="" class="form form-sm">
    <section class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            首頁輪播圖
        </label>
        <div class="col-xs-6">
            <input type="file" class="form-control form-control-sm">
            <small>最多一張圖，建議尺寸 1920 * 635 px，每張圖最大不可超過 2MB</small>
        </div>
    </section>
    <section class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            名稱
        </label>
        <div class="col-xs-6">
            <input type="text" class="form-control form-control-sm">
        </div>
    </section>
    <section class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            排序
        </label>
        <div class="col-xs-6">
            <input type="number" min="0" value="0" class="form-control form-control-sm">
        </div>
        <small class="col-xs-5">數字愈大愈前面</small>
    </section>
    <section class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            狀態
        </label>
        <div class="col-xs-6">
            <label class="c-input c-radio">
                <input type="radio" name="show" checked>
                <span class="c-indicator"></span>
                <span class="text-sm">顯示</span>
            </label>
            <label class="c-input c-radio m-r-0">
                <input type="radio" name="show">
                <span class="c-indicator"></span>
                <span class="text-sm">隱藏</span>
            </label>
        </div>
    </section>

    <div class="form-action">
        <button type="button" class="btn btn-primary btn-sm col-xs-offset-1" onclick="location.href='Index_list'">
            <i class="fa-check"></i> 存檔確認
        </button>
        <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='Index_list'">
            <i class="fa-times"></i> 回列表
        </button>
    </div>
</form>
