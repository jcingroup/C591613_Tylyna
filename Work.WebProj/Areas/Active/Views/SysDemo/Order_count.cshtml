
@{
    @* Layout = "~/Views/Shared/Manage/RLayout.cshtml"; *@
    @* 暫用 *@
    Layout = "~/Views/Shared/SysLayoutDemo.cshtml";
    ViewBag.BodyClass = "Order";
    ViewBag.IsFirstPage = false;
    ViewBag.Crumb = "訂單未出貨統計";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><i class="fa-caret-right"></i> 會員及訂單管理</li>
        <li><i class="fa-angle-right"></i> @ViewBag.Crumb</li>
    </ul>
}

<h3 class="h3">@ViewBag.Crumb</h3>

<header class="table-header">
    <div class="table-filter">
        <div class="form-inline">
            <label class="sr-only text-sm">關鍵字</label> @* 如要顯示文字: 把 sr-only 拿掉 *@
            <input type="text" class="form-control form-control-sm" placeholder="請輸入關鍵字...">
            <label class="text-sm">產品品名</label>
            <select class="form-control form-control-sm">
                <option>全部</option>
                <option>尼加拉瓜</option>
                <option>瓜地馬拉</option>
                <option>肯亞</option>
                <option>耶加雪菲</option>
                <option>哥倫比亞</option>
                <option>哥期大黎加</option>
                <option>黃金曼特寧</option>
                <option>蒲隆地</option>
            </select>
            <label class="text-sm">下單日期</label>
            <input type="date" class="form-control form-control-sm">
            <button class="btn btn-success btn-sm pull-xs-right"><i class="fa-print"></i> 列印</button>
        </div>
    </div><!-- table-filter //-->
</header><!-- table-header //-->

<table class="table table-sm table-bordered table-striped table-hover m-b-1">
    <caption class="w3-blue w3-padding">品名：哥倫比亞</caption>
