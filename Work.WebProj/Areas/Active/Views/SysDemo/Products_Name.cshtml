
@{
    @* Layout = "~/Views/Shared/Manage/RLayout.cshtml"; *@
    @* 暫用 *@
    Layout = "~/Views/Shared/SysLayoutDemo.cshtml";
    ViewBag.BodyClass = "Products";
    ViewBag.IsFirstPage = false;
    ViewBag.Crumb = "產品品名維護";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><i class="fa-caret-right"></i> 產品管理</li>
        <li><i class="fa-angle-right"></i> @ViewBag.Crumb</li>
    </ul>
}

<h3 class="h3">@ViewBag.Crumb</h3>

<header class="table-header">
    <div class="table-filter">
        <div class="form-inline">
            <label class="text-sm">主分類</label>
            <select class="form-control form-control-sm">
                <option>全部</option>
                <option>咖啡品項</option>
                <option>季節限定</option>
            </select>
            <label class="sr-only text-sm">關鍵字</label> @* 如要顯示文字: 把 sr-only 拿掉 *@
            <input type="text" class="form-control form-control-sm" placeholder="請輸入關鍵字...">
            <label class="text-sm">前台顯示</label>
            <select class="form-control form-control-sm">
                <option>全部</option>
                <option>顯示</option>
                <option>隱藏</option>
            </select>
        </div>
    </div><!-- table-filter //-->
</header><!-- table-header //-->

<table class="table table-sm table-bordered table-striped table-hover">
    <colgroup>
        <col style="width: 7%">
        <col span="2">
        <col style="width: 22%">
        <col style="width: 8%">
    </colgroup>
    <thead>
        <tr>
            <th class="text-xs-center">編輯</th>
            <th>
                @* 點選排序功能 (點一下遞增, 點兩下遞減) *@
                <button class="th-sort-toggle">主分類</button>
            </th>
            <th>
                <button class="th-sort-toggle">產品品名</button>
            </th>
            <th>
                @* 遞減排序的樣式 class 加 desc *@
                <button class="text-xs-center th-sort-toggle desc">狀態</button>
            </th>
            <th>
                @* 遞增排序的樣式 class 加 asc *@
                <button class="text-xs-center th-sort-toggle asc">排序</button>
            </th>
        </tr>
    </thead>
    @* 按下修改後才顯示 input等修改 *@
    @* 未按下修改時 *@
    <tr>
        <td class="text-xs-center">
            <button class="btn btn-link text-danger" title="刪除"><i class="fa fa-trash fa-lg"></i></button>
            <button class="btn btn-link text-success" title="編輯"><i class="fa fa-pencil fa-lg"></i></button>
        </td>
        <td>咖啡品項</td>
        <td>瓜地馬拉</td>
        <td class="text-xs-center">
            <span class="w3-tag label-default w3-round">隱藏</span>
        </td>
        <td class="text-xs-center">10</td>
    </tr>
    <tr>
        <td class="text-xs-center">
            <button class="btn btn-link text-danger" title="刪除"><i class="fa fa-trash fa-lg"></i></button>
            <button class="btn btn-link text-success" title="編輯"><i class="fa fa-pencil fa-lg"></i></button>
        </td>
        <td>咖啡品項</td>
        <td>商業豆</td>
        <td class="text-xs-center">
            <span class="w3-tag label-success w3-round">顯示</span>
        </td>
        <td class="text-xs-center">10</td>
    </tr>
    <tr>
        <td class="text-xs-center">
            <button class="btn btn-link text-danger" title="刪除"><i class="fa fa-trash fa-lg"></i></button>
            <button class="btn btn-link text-success" title="編輯"><i class="fa fa-pencil fa-lg"></i></button>
        </td>
        <td>季節限定</td>
        <td>綜合豆-耶加雪菲.瓜地馬拉.哥斯大黎加.肯亞.尼加拉瓜</td>
        <td class="text-xs-center">
            <span class="w3-tag label-warning w3-round">補貨中</span>
        </td>
        <td class="text-xs-center">10</td>
    </tr>
    @* 按下新增/修改時 *@
    <tr>
        <td class="text-xs-center">
            <button class="btn btn-link text-muted" title="取消修改"><i class="fa fa-reply"></i></button>
            <button class="btn btn-link text-primary" title="確定修改"><i class="fa fa-check fa-lg"></i></button>
        </td>
        <td>
            <select class="form-control form-control-sm" required>
                <option>請選擇主分類</option>
                <option>咖啡品項</option>
                <option>季節限定</option>
            </select>
        </td>
        <td>
            <input type="text" class="form-control form-control-sm" placeholder="請輸入產品品名..." required>
        </td>
        <td>
            <label class="c-input c-radio">
                <input type="radio" name="sale1" checked>
                <span class="c-indicator"></span>
                <span class="text-sm">顯示</span>
            </label>
            <label class="c-input c-radio">
                <input type="radio" name="sale1">
                <span class="c-indicator"></span>
                <span class="text-sm">隱藏</span>
            </label>
            <label class="c-input c-radio">
                <input type="radio" name="sale1">
                <span class="c-indicator"></span>
                <span class="text-sm">補貨中</span>
            </label>
        </td>
        <td>
            <input type="number" name="" id="" min="0" value="0" class="form-control form-control-sm text-xs-center">
        </td>
    </tr>
</table>

<footer class="table-footer clearfix">
    <button type="button" class="btn btn-sm btn-success pull-xs-left">
        <i class="fa-plus-circle"></i> 新增
    </button>
    <small class="pull-xs-right">第 1-10 筆，共 20 筆</small>
    <ul class="pager pager-sm">
        <li>
            <a href=""><i class="fa-angle-double-left"></i></a>
        </li>
        <li>
            <a href=""><i class="fa-angle-left"></i></a>
        </li>
        <li class="form-inline">
            <label>第</label>
            <input type="text" class="form-control form-control-sm text-xs-center" style="width:100px">
            <label>頁，共 2 頁</label>
        </li>
        <li>
            <a href=""><i class="fa-angle-right"></i></a>
        </li>
        <li>
            <a href=""><i class="fa-angle-double-right"></i></a>
        </li>
    </ul>
</footer>