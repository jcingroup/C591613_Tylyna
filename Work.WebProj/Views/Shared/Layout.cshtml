<!DOCTYPE html>
<html lang="zh-TW">
<!-- saved from url=(0014)about:internet -->
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title:@Resources.Res.System_FrontName</title>
    <meta name="keywords" content="@Resources.Res.Keywords">
    <meta name="description" content="@Resources.Res.Description">
    <script>
        var gb_approot = '@Url.Content("~")';
    </script>
    <link href="~/Content/css/vendor/icomoon.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/css/grid.css">
    @if (ViewBag.IsFirstPage)
    {
        <link href="~/Content/css/index.css?v=@CommWebSetup.CacheVer" rel="stylesheet">
    }
    else
    {
        <link href="~/Content/css/page.css?v=@CommWebSetup.CacheVer" rel="stylesheet">
    }
    @RenderSection("css", false)
</head>

<body class="@ViewBag.BodyClass">
    @* 登入畫面 *@
    <div id="login" class="modal animate-top">
        <div class="modal-content">
            <button onclick="document.getElementById('login').style.display='none'" class="btn-close"></button>

            <form id="tab-1" action="" class="tab-content">
                <header class="">會員登入</header>
                <div class="input-group">
                    <label class="input-group-addon icon-person" data-title="帳號"></label>
                    <input class="form-element" type="email" id="m_act" required placeholder="請輸入帳號(E-mail地址)">
                </div>
                <div class="input-group">
                    <label class="input-group-addon icon-lock2" data-title="密碼"></label>
                    <input class="form-element" type="password" id="m_pwd" required placeholder="請輸入密碼">
                </div>
                <button class="btn">登入</button>
                <a href="#tab-2" class="js-tab">忘記密碼</a>
            </form>

            <form id="tab-2" action="" class="tab-content">
                <header class="">忘記密碼</header>
                <div class="input-group">
                    <label class="input-group-addon icon-person" data-title="帳號"></label>
                    <input class="form-element" type="email" id="m_act" required placeholder="請輸入E-mail地址">
                </div>
                <button class="btn">送出</button>
            </form>
        </div><!-- modal-content //-->
    </div><!-- login //-->

    <div id="wrapper">
        <header id="header">
            <div class="wrap">
                <h1 class="logo" onclick="location.href='@Url.Content("~/index")'" title="回首頁" tabindex="-1">
                    @Resources.Res.System_FrontName
                </h1>
                <nav id="menu" class="navbar">
                    <a href="~/AboutUs">利他精神</a>
                    <a href="~/Quality">利他嚴選</a>
                    <a href="~/Products">咖啡品項</a>
                    <a href="~/Info">口味介紹</a>
                    <a href="~/Story">利他故事</a>
                    <a href="~/FAQ">FAQ常見問答</a>
                    <a href="~/ContactUs">聯絡我們</a>
                </nav>
                <nav class="top-nav">
                    @* 登入前顯示如下 *@
                    <button onclick="document.getElementById('login').style.display='block'">登入</button>
                    @* 登入後顯示如下 *@
                    @* <button>登出</button> *@

                    <a href="">購物車</a>
                    @* <a href="">Contact Us</a> *@
                </nav>
            </div>
        </header>
        @if (ViewBag.IsFirstPage)
        {
            <div id="banner" class="swiper-container">
                <ul class="swiper-wrapper">
                    <li class="swiper-slide"><img src="~/Content/images/Index/banner1.jpg"></li>
                </ul>
            </div>
            @RenderBody()
        }
        else
        {
            <div id="banner"><h1>@ViewBag.Title</h1></div>
            <main id="main">
                @RenderBody()
            </main>
        }
    </div><!-- wrapper //-->
    <footer id="footer">
        <div class="foot-contact">
            <h1 class="logo">LITA CAFE</h1>
            <h2>幸福企業社 | 桃園市中壢區復興路161號4樓</h2>
            <p>03-400 0000 | email <a href="mailto:address@lita.com.tw">address@lita.com.tw</a></p>
        </div>
        <div class="foot-social">
            <a href="">Facebook</a>
            <a href="">Youtube</a>
            <a href="">LINE</a>
        </div>
        <a href="#header" class="goTop icon-chevron-thin-up">BACK TO TOP</a>
    </footer>

    <script src="//code.jquery.com/jquery-latest.min.js"></script>
    <script src="~/Content/js/common.js"></script>
    <script src="~/Content/js/tab.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>